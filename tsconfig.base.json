{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "customConditions": ["@monorepo/source"],
    "baseUrl": ".",
    "paths": {
      "@monorepo/api-interface": ["packages/shared/api-interface/src/index.ts"],
      "@monorepo/react-lib": ["packages/shared/react-lib/src/index.ts"]
    }
  }
}
